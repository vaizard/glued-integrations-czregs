        listen [::]:8012 ssl http2 default_server;
        include snippets/server/common.conf;

        ##########################
        # Path locations         #
        ##########################

        # Main locations
        include snippets/common/location-main.conf;

        ##########################
        # PHP location match     #
        ##########################

        include snippets/common/location-php.conf;

        ##########################
        # Exact locations        #
        ##########################

        # none

        ##########################
        # Deny location match    #
        ##########################

        include snippets/common/location-deny.conf;
}

